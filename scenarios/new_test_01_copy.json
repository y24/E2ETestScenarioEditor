{
  "id": "SAMPLE-001",
  "name": "メモ帳検証サンプルシナリオ (Copy)",
  "tags": [
    "sample",
    "notepad"
  ],
  "description": "メモ帳を開き、テキスト入力を検証",
  "setup": [],
  "steps": [
    {
      "name": "メモ帳を起動",
      "type": "system",
      "params": {
        "action": "start_app",
        "path": "notepad.exe",
        "backend": "uia"
      },
      "_stepId": "stp_s8kkwpegz"
    },
    {
      "name": "テキストを入力",
      "type": "ui",
      "params": {
        "operation": "input",
        "target": "notepad_page.NotepadPage.editor",
        "value": "Hello World from E2E Framework"
      },
      "_stepId": "stp_90s7kuxn4"
    },
    {
      "name": "スクリーンショットを取得",
      "type": "screenshot",
      "params": {
        "target": "notepad_page.NotepadPage.window",
        "additional_name": "notepad_after_input"
      },
      "_stepId": "stp_eevcfn0xf"
    },
    {
      "name": "テキスト内容を検証",
      "type": "verify",
      "params": {
        "type": "contains",
        "target": "notepad_page.NotepadPage.editor",
        "contains": "Hello World from E2E Framework"
      },
      "_stepId": "stp_8fo6pir9c"
    },
    {
      "name": "全選択して削除",
      "type": "ui",
      "params": {
        "operation": "input",
        "target": "notepad_page.NotepadPage.editor",
        "value": "^a{DELETE}"
      },
      "_stepId": "stp_9qlg3f9io"
    },
    {
      "name": "ファイルメニューをクリック",
      "type": "ui",
      "params": {
        "operation": "click",
        "target": "notepad_page.NotepadPage.file_menu"
      },
      "_stepId": "stp_xmfafc1av"
    },
    {
      "name": "終了メニュー項目をクリック",
      "type": "ui",
      "params": {
        "operation": "click",
        "target": "notepad_page.NotepadPage.exit_menu_item"
      },
      "_stepId": "stp_iucmlny9e"
    }
  ],
  "teardown": [],
  "_editor": {
    "version": 1,
    "stepIdKey": "_stepId",
    "sections": {
      "setup": {
        "layout": [],
        "groups": {}
      },
      "steps": {
        "layout": [
          "stp_s8kkwpegz",
          "stp_90s7kuxn4",
          "stp_eevcfn0xf",
          "stp_8fo6pir9c",
          "stp_9qlg3f9io",
          "stp_xmfafc1av",
          "stp_iucmlny9e"
        ],
        "groups": {}
      },
      "teardown": {
        "layout": [],
        "groups": {}
      }
    }
  }
}